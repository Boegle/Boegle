<section id="book">
  <form id="bookInfo">
    <article class="cover page">
      <header>
        <input id="title" type="text" placeholder="titel">
        <input id="author" type="text" placeholder="auteur">
        <input id="coverColor" type="color">
        <label for="coverColor">Kaftkleur</label>
      </header>
      <footer>
        <input id="publisher" type="text" placeholder="uitgever">
      </footer>
      <div class="bookBottomTwo">
      </div>
    </article>
    <article class="page insidePage">
      <div class="mirror">
        <div class="select">
          <select id="language">
            <option value="none">Kies Taal</option>
            <option value="ger">Duits</option>
            <option value="eng">Engels</option>
            <option value="fre">Frans</option>
            <option value="dut">Nederlands</option>
          </select>
        </div>
        <div class="select">
          <select id="age">
            <option value="none">Kies Doelgroep</option>
            <option value="ageYouth">Jeugd</option>
            <option value="ageYoungAdult">Jong-volwassenen</option>
            <option value="ageAdult">Volwassenen</option>
          </select>
        </div>
        <label for="year">Jaar van uitgave</label>
        <input id="year" type="number" placeholder="bijv. 2018" min="1700" max="2018">
        <label for="illustrator">2e auteur/illustrator</label>
        <input id="illustrator" type="text" placeholder="Illustrator">
      </div>
    </article>
    <article class="page insidePage">
      <div class="">
        <label for="summary">Samenvatting</label>
        <textarea name="summary" id="summary" cols="30" rows="10"></textarea>
        <div class="select">
          <select id="illustrations">
            <option value="">Soort illustraties</option>
            <option value="black">Zwart/wit illustraties</option>
            <option value="color">Gekleurde illustraties</option>
            <option value="no">Geen illustraties</option>
          </select>
        </div>
      </div>
    </article>
    <article class="cover back page">
      <div class="mirror">
        <fieldset id="checkboxes">
          <legend>Genre</legend>
          <label for="romantisch">romantisch</label>
          <input id="romantisch" type="checkbox" value="romantisch-verhaal">
          <label for="detective">detective</label>
          <input id="detective" type="checkbox" value="detective">
          <label for="humor">humor</label>
          <input id="humor" type="checkbox" value="humor">
          <label for="thriller">thriller</label>
          <input id="thriller" type="checkbox" value="thriller">
          <label for="verhalenbundel">verhalenbundel</label>
          <input id="verhalenbundel" type="checkbox" value="verhalenbundel">
        </fieldset>
      </div>
    </article>
  </form>
</section>
<section id="range">
  <p id="pageSlideIndicator"></p>
  <input type="range" min="0" max="500" value="1" id="pages">
</section>
<section id="buttons">
  <button id="back">Terug</button>
  <a href="/result" id="resultButton" class="inactive noresult">Nog geen resultaten</a>
  <button id="next">Volgende</button>
</section>
