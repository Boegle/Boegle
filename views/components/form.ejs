<form id="bookInfo" class="">
  <fieldset>
    <label for="title">Titel</label>
    <input id="title" type="text" name="" value="" placeholder="De GVR">
    <label for="author">Auteur</label>
    <input id="author" type="text" name="" value="" placeholder="Roald Dahl">
    <select id="language" class="" name="">
      <option value="">Kies Taal</option>
      <option value="ger">Duits</option>
      <option value="eng">Engels</option>
      <option value="fre">Frans</option>
      <option value="dut">Nederlands</option>
    </select>
    <select id="age" class="" name="">
      <option value="">Kies Doelgroep</option>
      <option value="ageYouth">Jeugd</option>
      <option value="ageYoungAdult">Jong-volwassenen</option>
      <option value="ageAdult">Volwassenen</option>
    </select>
    <label for="year">Jaar van uitgave</label>
    <input id="year" type="number" name="" value="" placeholder="bijv. 2018">
  </fieldset>
  <fieldset id="checkboxes">
    <legend>Genre</legend>
    <label for="romantisch">romantisch</label>
    <input id="romantisch" type="checkbox" name="" value="romantisch-verhaal">
    <label for="detective">detective</label>
    <input id="detective" type="checkbox" name="" value="detective">
    <label for="humor">humor</label>
    <input id="humor" type="checkbox" name="" value="humor">
    <label for="thriller">thriller</label>
    <input id="thriller" type="checkbox" name="" value="thriller">
    <label for="verhalenbundel">verhalenbundel</label>
    <input id="verhalenbundel" type="checkbox" name="" value="verhalenbundel">
  </fieldset>
  <fieldset>
    <legend>Filter</legend>
      <label for="illustrator">2e auteur/illustrator</label>
      <input id="illustrator" type="text" name="" value="" placeholder="Illustrator">
      <select id="illustrations" class="" name="">
        <option value="">Soort illustraties</option>
        <option value="black">Zwart/wit illustraties</option>
        <option value="color">Gekleurde illustraties</option>
        <option value="no">Geen illustraties</option>
      </select>
      <label for="publisher">Uitgever</label>
      <input id="publisher" type="text" name="" value="" placeholder="Uitgever">
      <label for="pages">Aantal pagina's +/-</label>
      <input id="pages" type="number" name="" value="" placeholder="bijv. 200">
      <label for="summary">Samenvatting</label>
      <textarea name="summary" id="summary" cols="30" rows="10"></textarea>
  </fieldset>
  <fieldset>
    <legend>Kaft</legend>
    <label for="coverColor">Kleur van de kaft</label>
    <input id="coverColor" type="color" name="" value="">
    <label for="coverSummary">Omschrijving kaft</label>
    <textarea name="coverSummary" id="coverSummary" cols="30" rows="10"></textarea>
  </fieldset>
  <input id="submit" type="submit" name="" value="submit">
</form>